<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent"
    tools:context=".WeekSoendingActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <Toolbar
            android:id="@+id/w_toollbar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:elevation="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Budgeting App"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </Toolbar>


        <TextView
            android:id="@+id/w_total_budget_Amount_text_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total amount $0"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />





        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <ProgressBar
                android:id="@+id/w_progressbar_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/w_recycler_view_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


           <!-- <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/w_fab_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:fabSize="normal"
                android:onClick="fab"
                android:backgroundTint="@color/yellow"
                android:src="@drawable/plus"
                android:layout_margin="16dp"/>-->

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</LinearLayout>